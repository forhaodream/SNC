<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".讲农堂.讲农堂高手详情">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:background="@mipmap/jiangnongtang_bg">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/头像img"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerInParent="true"
            android:src="@mipmap/touxiang"/>

        <TextView
            android:id="@+id/地址tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/头像img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:text="山东聊城市"
            android:textColor="@android:color/white"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/地址tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px">

            <TextView
                android:id="@+id/身份tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经办人/代办"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/主营tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:layout_toRightOf="@id/身份tv"
                android:text="主营/西瓜"
                android:textColor="@android:color/white"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/浏览人数tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:text="1693人"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:text="历史浏览"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/关注人数tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:text="41人"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:text="关注了他"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/历史联系人数tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:text="89人"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:text="历史联系"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/持续经营tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:text="53天"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:text="持续经营"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/as_color"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical">

        <com.example.liquorslib.view.VShowView
            android:id="@+id/去店铺vs"
            android:layout_width="match_parent"
            android:layout_height="120px"
            app:VS_imageRight="@mipmap/back_right"
            app:VS_label="供应信息"
            app:VS_value="去店铺"
            app:VS_valueColor="@color/text_gray"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/as_color"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical">

        <com.example.liquorslib.view.VShowView
            android:id="@+id/更多vs"
            android:layout_width="match_parent"
            android:layout_height="130px"
            app:VS_imageRight="@mipmap/back_right"
            app:VS_label="最近动态"
            app:VS_value="更多"
            app:VS_valueColor="@color/text_gray"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/as_color"/>

    <com.example.liquorslib.view.VShowView
        android:id="@+id/诚信等级vs"
        android:layout_width="match_parent"
        android:layout_height="160px"
        app:VS_imageRight="@mipmap/info"
        app:VS_label="诚信等级"
        app:VS_value=""/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/as_color"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/加关注tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:drawableLeft="@color/color_9"
            android:text="评价他"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/聊一聊btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/theme_green"
            android:drawableLeft="@mipmap/dianhua"
            android:text="聊一聊"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/打电话btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/holo_orange_dark"
            android:drawableLeft="@color/color_9"
            android:text="打电话"
            android:textColor="@android:color/white"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>