<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:scaleType="fitXY"
                android:src="@mipmap/wodenongzi"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/姓名tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="您的姓名:"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/身份tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="您的身份:"
                    android:textColor="@android:color/black"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="22px"
                android:background="@color/as_color"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="请提供身份证明图片"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="您的信息仅供认证使用, 智慧新农村不会未经授权透露给第三方"
                    android:textColor="@color/text_grays"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/上传img"
                        android:layout_width="0dp"
                        android:layout_height="500px"
                        android:layout_weight="3"
                        android:scaleType="fitXY"
                        android:src="@mipmap/shangchuan"/>

                    <ImageView
                        android:src="@mipmap/shili"
                        android:id="@+id/点击查看示例img"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30px"
                    android:text="@string/aaaaa"
                    android:textColor="@color/red"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:background="@color/as_color"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="经营范围"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="请选择与经营执照许可范围相同, 可多选"/>

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/FlowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:background="@color/as_color"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/CheckBox"
                    android:layout_width="70px"
                    android:layout_height="70px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意《智慧新农村农资经销资质协议》"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <Button
                android:id="@+id/提交认证btn"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_margin="60px"
                android:background="@android:color/holo_orange_dark"
                android:text="提交认证"
                android:textColor="@android:color/white"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
