<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/csd_back"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginTop="30px"
        android:src="@mipmap/black_zuo"/>

    <ImageView
        android:id="@+id/csd_share"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginRight="50px"
        android:layout_marginTop="30px"
        android:layout_toLeftOf="@id/csd_more"
        android:src="@mipmap/black_share"/>

    <ImageView
        android:id="@+id/csd_more"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50px"
        android:layout_marginTop="30px"
        android:src="@mipmap/black_more"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_img"
                android:layout_width="match_parent"
                android:layout_height="500px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cs_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="优质村庄"/>

                <TextView
                    android:id="@+id/cs_juli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="距离1659公里"/>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/价格tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="75元/斤"
                        android:textColor="@color/red"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/最低数量tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:layout_toRightOf="@id/价格tv"
                        android:background="@color/red"
                        android:padding="20px"
                        android:text="10000斤/起"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/cs_renshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30px"
                        android:layout_toRightOf="@id/最低数量tv"
                        android:text="10000人加入"/>

                    <TextView
                        android:id="@+id/举报低价tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:text="举报低价"/>
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="麒麟西瓜"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30px"
                            android:text="麒麟西瓜"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="麒麟西瓜"/>

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30px"
                            android:text="麒麟西瓜"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/安全img"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:src="@color/color_9"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/信息rlc"
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/头像img"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:src="@color/color_9"/>

                <TextView
                    android:id="@+id/姓名tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/头像img"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@id/头像img"
                    android:text="田庆玲"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/include"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/姓名tv"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@id/头像img"
                    android:text="合作社 持续经营536天"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/back_right"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="@color/view_hui">

                <TextView
                    android:id="@+id/诚信等级tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="诚信等级: 6级"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/评价tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="140px"
                    android:text="诚信等级: 6级"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/back_right"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/评价数量tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:text="评价 (100)"
                    android:textColor="@android:color/black"/>


                <ImageView
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:src="@mipmap/back_right"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/view_hui"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="30px"
                    android:text="详细价格"
                    android:textColor="@android:color/black"/>

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/flow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    app:flChildSpacing="7dp"
                    app:flRowSpacing="8dp"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:text="【联系我时, 请说是在智慧新农村上看到的】"
                android:textColor="@color/text_grays"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/auto_img_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/发布时间tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:text="发布时间: 08月28日"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px">

                <TextView
                    android:id="@+id/热门产地tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="为你推荐"
                    android:textColor="@color/text_grays"/>

                <View
                    android:layout_width="200px"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:layout_toLeftOf="@id/热门产地tv"
                    android:background="@color/text_grays"/>

                <View
                    android:layout_width="200px"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@id/热门产地tv"
                    android:background="@color/text_grays"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ch.chtool.view.MyGridView
                android:id="@+id/MyGridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/叫物流rlc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/car_hui"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22px"
                android:text="叫物流"
                android:textColor="@android:color/black"
                android:textSize="11sp"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/立即买rlc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/zhijiemai"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22px"
                android:text="立即买"
                android:textColor="@android:color/black"
                android:textSize="11sp"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:id="@+id/聊一聊btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/theme_green"
            android:drawableLeft="@color/color_9"
            android:text="聊一聊"/>

        <Button
            android:id="@+id/人气btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/text_orange"
            android:drawableLeft="@color/color_9"
            android:text="人气   1"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>