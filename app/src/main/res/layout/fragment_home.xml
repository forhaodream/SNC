<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px">

        <TextView
            android:id="@+id/home_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:drawablePadding="16px"
            android:drawableRight="@mipmap/down"
            android:text="沈阳市"
            android:textColor="@color/home_text_hui"
            android:textSize="14sp"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/home_search_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="170px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/home_address_tv"
            android:background="@drawable/draw_home_search_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60px"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="12px"
                android:text="搜索"
                android:textColor="@color/home_search_text_hui"
                android:textSize="12sp"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <ImageView
            android:id="@+id/首页浏览记录"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@mipmap/liulanjilu"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="420px">

                <com.land.ch.smartnewcountryside.view.AutoSwitchView
                    android:id="@+id/fragment_home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/彩色分类"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10px"
                android:background="@color/gray"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/绿色分类"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/首页广告一"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_marginTop="20px"
                android:scaleType="fitXY"
                android:src="@mipmap/guangaoyi"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="22px"
                android:background="@color/view_hui"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="400px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/首页广告二"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/moxian"/>
                20 932551 3885


                30 1150980.61 3197.17

                <ImageView
                    android:id="@+id/发采购img"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/facaigou"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="22px"
                android:background="@color/view_hui"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="640px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/生意圈"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/shngyiquan"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/图片看病"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/tupiankanbing"/>

                    <ImageView
                        android:id="@+id/全国行情"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/quanguohangqign"/>
                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="22px"
                android:background="@color/view_hui"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="640px"
                android:orientation="horizontal">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/优选基地"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/youxuanjidi"/>

                    <ImageView
                        android:id="@+id/视频直播"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/shipinzhibo"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:id="@+id/代养代种"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/caizhai"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/首页广告三"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:scaleType="fitXY"
                android:src="@mipmap/guanggaoer"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/view_hui"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="优选农村"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:drawableRight="@mipmap/doublejiantou"
                    android:text="查看更多"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ch.chtool.view.MyGridView
                android:id="@+id/优选农村"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="专区"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/优质供应商"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/youzhigongyingshang"/>

                <ImageView
                    android:id="@+id/名优特产"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/mingyoutechan"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/首页广告四"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:scaleType="fitXY"
                android:src="@mipmap/guanggaosan"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/view_hui"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:text="为你推荐"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:drawableRight="@mipmap/doublejiantou"
                    android:text="查看更多"/>
            </com.zhy.autolayout.AutoRelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/首页商品展示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>