<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:background="@android:color/white"
                                     android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/商家名称tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:text="商家名称"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:text="已完成"
            android:textColor="@color/theme_green"
            android:textSize="12sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_grays"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/item_order_detial_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_order_head"
            android:layout_width="280px"
            android:layout_height="280px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:layout_toRightOf="@id/item_order_head"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_toRightOf="@id/item_order_head"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="title"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/单价tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30px"
                android:text="6元/棵"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/产地tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="产地"
                android:textColor="@color/text_gray"/>

            <TextView
                android:id="@+id/规格tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="规格"
                android:textColor="@color/text_gray"/>

            <TextView
                android:id="@+id/item_order_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#a1a1a1"
                android:textSize="14sp"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/item_order_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:text="30棵"
            android:textColor="@color/text_grays"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_order_all_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="订单来自供应"
            android:textColor="@color/text_grays"
            android:textSize="12sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_grays"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/item_order_finish_rl"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/item_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:background="@drawable/gray_shape"
            android:padding="4dp"
            android:text="删除订单"
            android:textColor="@color/text_grays"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@id/item_order_delete"
            android:background="@drawable/theme_shape"
            android:padding="4dp"
            android:text="订单详情"
            android:textColor="@color/theme_green"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_order_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@id/item_order_detail"
            android:background="@drawable/theme_shape"
            android:padding="4dp"
            android:text="评价晒单"
            android:textColor="@color/theme_green"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_order_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@id/item_order_comment"
            android:background="@drawable/theme_shape"
            android:padding="4dp"
            android:text="查询票务"
            android:textColor="@color/theme_green"
            android:textSize="12sp"/>


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/待付款"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/item_order_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:background="@drawable/gray_shape"
            android:padding="4dp"
            android:text="关闭交易"
            android:textColor="@color/text_grays"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/item_order_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:layout_toLeftOf="@id/item_order_close"
            android:background="@drawable/theme_shape"
            android:padding="4dp"
            android:text="支付订单"
            android:textColor="@color/theme_green"
            android:textSize="12sp"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/已取消"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/已取消删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:background="@drawable/gray_shape"
            android:padding="4dp"
            android:text="删除订单"
            android:textColor="@color/text_grays"
            android:textSize="12sp"/>


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/view_hui"/>
</com.zhy.autolayout.AutoLinearLayout>