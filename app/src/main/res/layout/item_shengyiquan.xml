<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/头像img"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:src="@mipmap/touxiang"/>

        <TextView
            android:id="@+id/姓名tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/头像img"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/头像img"
            android:text="宋晓萌"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/头像img"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/姓名tv"
            android:background="@color/text_orange"
            android:text="实名"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/时间tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/姓名tv"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/头像img"
            android:text="6分钟前"/>

        <ImageView
            android:layout_width="90px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_right"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_marginLeft="150px"
        android:layout_marginRight="30px"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/文字tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shibobozhong"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px">

        <TextView
            android:id="@+id/评论tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/pinglun"
            android:src="@mipmap/back_right"
            android:text="评论"/>

        <TextView
            android:id="@+id/点赞tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@id/评论tv"
            android:drawableLeft="@mipmap/dianzan"
            android:text="点赞"/>

        <TextView
            android:id="@+id/浏览tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:text="122次浏览"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>